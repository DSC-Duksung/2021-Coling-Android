<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ivory"
    tools:context=".HistoryActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/back_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="COling"
        android:textColor="@color/gray"
        android:textSize="20sp"
        android:fontFamily="@font/bmjua"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="25dp"
        android:text="Day 1 - 7"
        android:textColr="@color/darkgreen"
        android:textSize="25dp"
        android:fontFamily="@font/bmjua"
        android:background="@drawable/day_edge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/lime"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintVertical_bias="0.38">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:text="Click for Details"
            android:textSize="20sp"
            android:textColor="@color/gray"
            android:fontFamily="@font/bmjua"
            />

        <LinearLayout
            android:id="@+id/check_1to4"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginVertical="30dp"
            android:padding="10dp"
            android:weightSum="4"
            >
            <ImageView
                android:id="@+id/check_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2.5dp"
                android:layout_weight="1"
                android:src="@drawable/no_record"
                />
            <ImageView
                android:id="@+id/check_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2.5dp"
                android:layout_weight="1"
                android:src="@drawable/no_record"
                />
            <ImageView
                android:id="@+id/check_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2.5dp"
                android:layout_weight="1"
                android:src="@drawable/no_record"
                />
            <ImageView
                android:id="@+id/check_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2.5dp"
                android:layout_weight="1"
                android:src="@drawable/no_record"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/check_5to7"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_gravity="bottom"
            android:layout_marginVertical="30dp"
            android:padding="10dp"
            android:weightSum="8"
            >
            <view
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                />
            <ImageView
                android:id="@+id/check_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2.5dp"
                android:layout_weight="2"
                android:src="@drawable/no_record"
                />
            <ImageView
                android:id="@+id/check_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2.5dp"
                android:layout_weight="2"
                android:src="@drawable/no_record"
                />
            <ImageView
                android:id="@+id/check_7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2.5dp"
                android:layout_weight="2"
                android:src="@drawable/no_record"
                />
            <view
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00000000"
                />
        </LinearLayout>
    </>

</androidx.constraintlayout.widget.ConstraintLayout>
