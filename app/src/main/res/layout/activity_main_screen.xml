<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/home_drawer"
    tools:context=".MainScreenActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ivory"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/COling_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/bmjua"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="false"
                android:text="COling"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/text_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="DAY"
                android:fontFamily="@font/bmjua"
                android:layout_marginLeft="120dp"
                android:textColor="@color/darkgreen"
                android:textSize="50sp"/>

            <TextView
                android:id="@+id/text_day_real"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_horizontal"
                android:layout_marginRight="120dp"
                android:layout_marginTop="80dp"
                android:fontFamily="@font/bmjua"
                android:text="14"
                android:textColor="@color/darkgreen"
                android:textSize="50sp" />
            <TextView
                android:id="@+id/today_quote_box"
                android:layout_width="350dp"
                android:layout_height="250dp"
                android:background="@color/mint"
                android:text="\nToday's Quote"
                android:textStyle="bold"
                android:fontFamily="@font/bmhnnnaair"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/today_quote_content"
                android:layout_width="300dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:text="Here are a sample quote and some long text for view test"
                android:fontFamily="@font/bmhnnnaair"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textAlignment="center"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/today_quote_writer"
                android:layout_width="300dp"
                android:layout_marginTop="90dp"
                android:layout_height="wrap_content"
                android:text="- Writer -"
                android:fontFamily="@font/bmhnnnaair"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textAlignment="center"
                android:textSize="25sp"/>

            <Button style="@style/MyButtonview"
                android:id="@+id/today_act_start_btn"
                android:layout_width="250dp"
                android:layout_marginTop="550dp"
                android:text="Start !"
                android:layout_gravity="center_horizontal"/>

        </FrameLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/main_bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/green"
            app:itemBackground="@color/green"
            app:itemTextAppearanceActive="@style/BottomNavigationView.Active"
            app:itemTextAppearanceInactive="@style/BottomNavigationView"
            app:itemIconTint="@color/bottom_selector"
            app:itemTextColor="@color/bottom_selector"
            app:labelVisibilityMode="labeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/navigation" />

    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>

