<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ivory">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/bmjua"
        android:text="Music"
        android:textColor="@color/darkgreen"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/bmjua"
        android:text="Choose the theme"
        android:textColor="@color/gray"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <ImageView
        android:id="@+id/btn_music_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_icon" />

    <ScrollView
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/lightgreen">

                <Button
                    android:id="@+id/btn_music_cleaning"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="230dp"
                    android:layout_height="60dp"
                    android:background="@color/lightgreen"
                    android:fontFamily="@font/bmhnnnaair"
                    android:text="Cleaning"
                    android:textColor="@color/darkgreen"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/btn_play_cleaning"
                    android:padding="10dp"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon_play"/>

                <ImageView
                    android:id="@+id/btn_stop_cleaning"
                    android:layout_marginLeft="20dp"
                    android:padding="10dp"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon_playstop"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/lightgreen">

                <Button
                    android:id="@+id/btn_music_coffee"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="230dp"
                    android:layout_height="60dp"
                    android:background="@color/lightgreen"
                    android:fontFamily="@font/bmhnnnaair"
                    android:text="Coffee"
                    android:textColor="@color/darkgreen"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/btn_play_coffee"
                    android:padding="10dp"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon_play"/>

                <ImageView
                    android:id="@+id/btn_stop_coffee"
                    android:layout_marginLeft="20dp"
                    android:padding="10dp"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon_playstop"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/lightgreen">

                <Button
                    android:id="@+id/btn_music_cooking"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="230dp"
                    android:layout_height="60dp"
                    android:background="@color/lightgreen"
                    android:fontFamily="@font/bmhnnnaair"
                    android:text="Cooking"
                    android:textColor="@color/darkgreen"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/btn_play_cooking"
                    android:padding="10dp"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon_play"/>

                <ImageView
                    android:id="@+id/btn_stop_cooking"
                    android:layout_marginLeft="20dp"
                    android:padding="10dp"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon_playstop"/>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/lightgreen">

                <Button
                    android:id="@+id/btn_music_drive"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="230dp"
                    android:layout_height="60dp"
                    android:background="@color/lightgreen"
                    android:fontFamily="@font/bmhnnnaair"
                    android:text="drive"
                    android:textColor="@color/darkgreen"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/btn_play_drive"
                    android:padding="10dp"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon_play"/>

                <ImageView
                    android:id="@+id/btn_stop_drive"
                    android:layout_marginLeft="20dp"
                    android:padding="10dp"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon_playstop"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/lightgreen">

                <Button
                    android:id="@+id/btn_music_shopping"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="230dp"
                    android:layout_height="60dp"
                    android:background="@color/lightgreen"
                    android:fontFamily="@font/bmhnnnaair"
                    android:text="shopping"
                    android:textColor="@color/darkgreen"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/btn_play_shopping"
                    android:padding="10dp"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon_play"/>

                <ImageView
                    android:id="@+id/btn_stop_shopping"
                    android:layout_marginLeft="20dp"
                    android:padding="10dp"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon_playstop"/>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/lightgreen">

                <Button
                    android:id="@+id/btn_music_walk"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="230dp"
                    android:layout_height="60dp"
                    android:background="@color/lightgreen"
                    android:fontFamily="@font/bmhnnnaair"
                    android:text="walk"
                    android:textColor="@color/darkgreen"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/btn_play_walk"
                    android:padding="10dp"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon_play"/>

                <ImageView
                    android:id="@+id/btn_stop_walk"
                    android:layout_marginLeft="20dp"
                    android:padding="10dp"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon_playstop"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/lightgreen">

                <Button
                    android:id="@+id/btn_music_yoga"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="230dp"
                    android:layout_height="60dp"
                    android:background="@color/lightgreen"
                    android:fontFamily="@font/bmhnnnaair"
                    android:text="yoga"
                    android:textColor="@color/darkgreen"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/btn_play_yoga"
                    android:padding="10dp"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon_play"/>

                <ImageView
                    android:id="@+id/btn_stop_yoga"
                    android:layout_marginLeft="20dp"
                    android:padding="10dp"
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon_playstop"/>

            </LinearLayout>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/bmjua"
                android:gravity="center"
                android:text="Music: https://www.bensound.com"
                android:textColor="@color/gray"
                android:textSize="8sp" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>