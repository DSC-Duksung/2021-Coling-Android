<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailHistoryActivity"
    >

    <ImageView
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/back_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/day_square"
        android:gravity="center_horizontal|center_vertical"
        android:text="2020.02.01"
        android:textColor="@color/darkgreen"
        android:textSize="25sp"
        android:fontFamily="@font/bmjua"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_doit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/lightgreen">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:padding="20dp"
                    android:src="@drawable/dummy_photo" />
            </FrameLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/bmjua"
                android:padding="5dp"
                android:text="Water the plant"
                android:textColor="@color/darkgreen"
                android:textSize="25sp"
                />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/lightgreen"
                android:fontFamily="@font/bmhnnnaair"
                android:gravity="center_horizontal|center_vertical"
                android:padding="20dp"
                android:text="How about watering the pot? Looking at the fresh grass, Put your worries down for a while."
                android:textColor="@color/darkgreen"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/bmjua"
                android:padding="5dp"
                android:text="Emotion"
                android:textColor="@color/darkgreen"
                android:textSize="25sp"
                />

            <ImageView
                android:id="@+id/textView6"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:background="@color/lightgreen"
                android:fontFamily="@font/bmhnnnaair"
                android:gravity="center_horizontal|center_vertical"
                android:src="@drawable/dummy_emotion"
                />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/bmjua"
                android:padding="5dp"
                android:text="Short Story of Today"
                android:textColor="@color/darkgreen"
                android:textSize="25sp"
                />

            <EditText
                android:id="@+id/textView8"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:background="@color/lightgreen"
                android:fontFamily="@font/bmhnnnaair"
                android:gravity="center_horizontal|center_vertical"
                android:padding="20dp"
                android:inputType="text"
                android:text="I took care of the plants that I had been putting off.I feel comfortable for no reason."
                android:textColor="@color/darkgreen"
                android:textSize="20sp"

                android:maxHeight="100000dp"
                />

        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/btn_doit"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:background="@color/green"
        android:fontFamily="@font/bmjua"
        android:text="Modify"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>